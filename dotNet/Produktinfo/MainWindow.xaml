<Window x:Class="Produktinfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Produktinfo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="Listi" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="21,200,464,34" SelectionChanged="ListBox_SelectionChanged" Loaded="ListBox_Loaded"/>
        <ComboBox x:Name="Combo" HorizontalAlignment="Left" Margin="21,65,0,0" VerticalAlignment="Top" Width="315" SelectionChanged="ComboBox_SelectionChanged" Loaded="Combo_Loaded"/>
        <TextBox x:Name="TextBoxPName" HorizontalAlignment="Left" Margin="488,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278"/>
        <TextBox x:Name="TextBoxPreis" HorizontalAlignment="Left" Margin="488,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278"/>
        <Label Content="Kategorie" HorizontalAlignment="Left" Margin="21,34,0,0" VerticalAlignment="Top"/>
        <Label Content="Produktname" HorizontalAlignment="Left" Margin="488,34,0,0" VerticalAlignment="Top" Width="139"/>
        <Label Content="Preis" HorizontalAlignment="Left" Margin="488,169,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
